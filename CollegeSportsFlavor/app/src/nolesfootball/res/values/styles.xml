<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/Sports.ActionBar</item>
    </style>

    <style name="Sports.ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#65021A</item>
        <item name="android:titleTextStyle">@style/Sports.ActionBar.TitleTextStyle</item>
        <item name="android:subtitleTextStyle">@style/Sports.ActionBar.SubtitleTextStyle</item>
    </style>

    <style name="Sports.ActionBar.SubtitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textSize">10.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ccffffff</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Sports.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
